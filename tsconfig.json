{
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node16",
    "baseUrl": "./",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
